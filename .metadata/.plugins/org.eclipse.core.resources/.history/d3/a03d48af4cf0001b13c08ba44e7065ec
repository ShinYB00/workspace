package challenge;

public class Problem15 {

	public static void main(String[] args) {
		for (int i = 5; i > 0; i--) {
			for(int j = 1; j <= i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		String aster = "*";
		String space = " ";
		for (int i = 1; i <= 5; i++) {
			for(int j = 1; j <= 5-i; j++ ) {
				System.out.print(space);
			}
			for(int k = 1; k <= (2*i-1); k++) {
				System.out.print(aster);
			}
			System.out.println();
		}
	}

}
