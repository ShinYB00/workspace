package challenge;

public class Problem3 {
	public static void main(String[] args) {
		int count = 0;
		int sum = 0;
		for(int i = 1; i <= 100; i++) {
			if(i % 3 == 0) {
				count++;
				sum += i;
			}
		}
		
		System.out.println("1부터 100까지의 숫자 중 3의 배수의 합은 " + sum +"이며, 개수는 " + count + "입니다.");
	}

}
