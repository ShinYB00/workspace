package challenge;

public class Problem10 {

	public static void main(String[] args) {
		double[] rains = new double[30];
		for(int i = 0; i < rains.length; i++) {
			rains[i] = Math.random() * 101;
		}
		
		double rainSum = 0.0;
		for(int i = 0; i < rains.length; i ++) {
			rainSum += rains[i];
		}
		
		System.out.printf("4월의 강수량 평균은 %.2f% 입니다.", (rainSum/rains.length));
	}

}
